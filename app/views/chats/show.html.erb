<div class="list list--chat">
  <div id="user-message" class="chat_item">
    <% @chat.messages.each do |message| %>
      <p class="<%= (message.user_id == current_user.id) ? '' : 'chat_gray_bg' %>">
        <span><%= message.user.first_name %></span>
        <%= message.body %>
        <span><%= message.created_at.strftime("%Y-%m-%d %I:%M %p") %></span>
      </p>
    <% end %>
  </div>
  <div class="message_input">
    <%= render 'messages/form' %>
  </div>
</div>
