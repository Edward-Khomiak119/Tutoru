<p id="notice"><%= notice %></p>

<h1>Payment Sources</h1>

<table>
  <thead>
    <tr>
      <th>Last 4</th>
      <th>Cvc</th>
      <th>Exp year</th>
      <th>Exp month</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_sources.each do |payment_source| %>
      <tr>
        <td><%= payment_source.last_4 %></td>
        <td><%= payment_source.cvc %></td>
        <td><%= payment_source.exp_year %></td>
        <td><%= payment_source.exp_month %></td>
        <td><%= payment_source.student_id %></td>
        <td><%= link_to 'Show', payment_source %></td>
        <td><%= link_to 'Edit', edit_payment_source_path(payment_source) %></td>
        <td><%= link_to 'Destroy', payment_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

