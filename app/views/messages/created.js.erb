var containerForMessageBody = document.createElement('p');
var wrapperForMessages = document.querySelector('#user-message');
var inputMessages = document.querySelector('#user-message-input p textarea');
var scrollChat = document.querySelector("#user-message");

containerForMessageBody.innerHTML = `
<span><%= @message.user.first_name %></span>
<%= @message.body %>
<span><%= @message.created_at.strftime("%Y-%m-%d %I:%M %p") %></span>`;
wrapperForMessages.appendChild(containerForMessageBody);
inputMessages.value = "";

scrollChat.scrollTo(0, scrollChat.scrollHeight);
